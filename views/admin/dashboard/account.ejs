<div class="page-body">
  <%- include('../global/components/breadcrumb.ejs',{subTitle:"Profile",icon:"stroke-user"}) %>
    <!-- Container-fluid starts-->
    <div class="container-fluid default-dashboard">
      <div class="card mt-5">
        <div class="card-header">
          <div class="title-header">
            <div class="d-flex align-items-center">
              <h5>My Account</h5>
            </div>
          </div>
        </div>
        <div class="card-body">
          <ul class="simple-wrapper nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
              <a class="nav-link active txt-primary" id="home-tab" data-bs-toggle="tab" href="#home" role="tab"
                aria-controls="home" aria-selected="true">Profile Setting</a>
            </li>
            <li class="nav-item">
              <a class="nav-link txt-primary" id="profile-tabs" data-bs-toggle="tab" href="#profile" role="tab"
                aria-controls="profile" aria-selected="false">Change Password</a>
            </li>
          </ul>
          <div class="tab-content mt-4" id="myTabContent">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
              <div id="msform">
                <form id="profileForm" class="stepper-one row g-3 mt-4 needs-validation custom-input" novalidate="">
                  <input type="hidden" name="oldEmail" value="<%= user.email %>" id="" />

                  <div class="mb-3 row">
                    <label class="col-sm-1 mt-2">Name</label>
                    <div class="col-sm-11">
                      <input class="form-control" name="fullName" value="<%= user.name %>" type="text"
                        placeholder="Enter Full Name" />
                    </div>
                  </div>
                  <div class="mb-3 row">
                    <label class="col-sm-1 mt-2">Email</label>
                    <div class="col-sm-11">
                      <input class="form-control" type="email" name="email" value="<%= user.email %>"
                        placeholder="Enter E-mail" readonly />
                    </div>
                  </div>
                  <br />
                  <div class="row mt-3">
                    <div class="col-sm-11"></div>
                    <div class="col-sm-1">
                      <button class="btn btn-primary" type="submit">Save</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tabs">
              <form id="passwordForm" class="stepper-one row g-3 mt-4 needs-validation custom-input" novalidate="">
                <div class="mb-3 row">
                  <label class="col-sm-2 mt-2">Current Password</label>
                  <div class="col-sm-10">
                    <input class="form-control" name="old_password" type="password" autocomplete="off" placeholder="*********" required />
                  </div>
                </div>
                <div class="mb-3 row">
                  <label class="col-sm-2 mt-2">New Password</label>
                  <div class="col-sm-10">
                    <input class="form-control" type="password" name="password" autocomplete="off" placeholder="*********" required />
                  </div>
                </div>
                <div class="mb-3 row">
                  <label class="col-sm-2 mt-2">Confirm Password</label>
                  <div class="col-sm-10">
                    <input class="form-control" type="password" name="confirm" autocomplete="off" placeholder="*********" required />
                    <span id="error-text" class="d-none text-danger">New password and confirm new password must be same</span>
                  </div>
                </div>
                <br />
                <div class="row mt-3">
                  <div class="col-sm-11"></div>
                  <div class="col-sm-1">
                    <button class="btn btn-primary" id="liveToast6" type="submit">Save</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Container-fluid Ends-->
</div>