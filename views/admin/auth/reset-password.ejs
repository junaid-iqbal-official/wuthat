<%- include('./components/error-alert.ejs', { error:error }) %>

<div class="login-main">
  <form class="theme-form" method="post" action="/admin/auth/reset-password">
    <h4>Set a new Password</h4>
    <br />
    <input name="email" type="hidden" value="<%= email %>">
    <div class="form-group">
      <label class="col-form-label">New Password</label>
      <div class="form-input position-relative">
        <input class="form-control" type="password" name="password" required="" placeholder="*********" />
      </div>
    </div>
    <div class="form-group">
      <label class="col-form-label">Confirm Password</label>
      <div class="form-input position-relative">
        <input class="form-control" type="password" name="confirm" required="" placeholder="*********" />
      </div>
    </div>
    <div class="form-group mb-0">
      <div class="text-end">
        <button class="btn btn-primary btn-block w-100 mt-3" type="submit">Send</button>
      </div>
    </div>
  </form>
</div>