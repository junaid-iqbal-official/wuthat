
<%- include('./components/error-alert.ejs', { error:error }) %>

<div class="login-main">
  <form class="theme-form" method="post" action="/admin/auth/login">
    <h4>Sign in to account</h4>
    <div class="form-group">
      <label class="col-form-label">Email Address</label>
      <input class="form-control" name="email" type="email" required="" placeholder="Enter Email" />
    </div>
    <div class="form-group">
      <label class="col-form-label">Password</label>
      <div class="form-input position-relative">
        <input class="form-control" type="password" name="password" required="" autocomplete="off" placeholder="*********" />
      </div>
    </div>
    <div class="form-group mb-0">
      <div class="form-check">
        <input class="checkbox-primary form-check-input" id="checkbox1" type="checkbox" />
        <label class="text-muted form-check-label" for="checkbox1">Remember password</label>
      </div>
      <a class="link" href="/admin/auth/forgot-password">Forgot password?</a>
      <div class="text-end">
        <button class="btn btn-primary btn-block w-100 mt-3" type="submit">Sign in</button>
      </div>
    </div>
  </form>
</div>