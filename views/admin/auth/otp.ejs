<%- include('./components/error-alert.ejs', { error:error }) %>

<div class="login-main">
  <form class="theme-form" method="post" action="/admin/auth/verify-otp">
    <h4>Almost There!</h4>
    <div>We sent an OTP to <%= email %>.</div>
    <br />
    <div class="form-group">
      <label class="col-form-label">One Time Password</label>
      <input name="email" type="hidden" value="<%= email %>" />
      <input class="form-control" id="otp" name="otp" type="number" required="" placeholder="Enter OTP"
        autocomplete="off" />
    </div>
    <div class="form-group mb-0">
      <div class="text-end">
        <button class="btn btn-primary btn-block w-100 mt-3" type="submit">Send</button>
      </div>
    </div>
  </form>
</div>