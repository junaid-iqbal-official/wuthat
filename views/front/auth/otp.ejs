<h3>Almost There!</h3>
<h4>We sent an OTP to <%= email %>. Enter it to continue.</h4>
<% if (error) { %>
<div class="alert alert-danger" role="alert">
    <i class="fa fa-solid fa-warning"></i>
    <%= error %>
</div>
<% } %>
<form class="form2" method="POST" action="/verify-otp" id="otpForm">
    <div class="form-group">
        <label class="col-form-label" for="otp">One Time Password</label>
        <input name="email" type="hidden" value="<%= email %>">
        <input class="form-control" id="otp" type="number" name="otp" required placeholder="Enter OTP" autocomplete="off">
    </div>
    <div class="form-group mb-0">
        <button type="submit" class="btn button-effect btn-primary" id="verifyButton" data-originalText="Verify OTP">Verify OTP
            <span class="btn-spinner spinner-border spinner-border-sm d-none" aria-hidden="true"></span>
        </button>
    </div>
</form>