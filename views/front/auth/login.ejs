<h3>Let's Get Talking</h3>
<h4>Sign in and dive right back into your chats.</h4>
<% if (error) { %>
<div class="alert alert-danger" role="alert">
    <i class="fa fa-solid fa-warning"></i>
    <%= error %>
</div>
<% } %>
<form class="form2" id="loginForm" method="post" action="/login">
    <div class="form-group">
        <label class="col-form-label" for="email">Email Address</label>
        <input class="form-control" name="email" id="email" type="email" placeholder="Enter Email" required>
    </div>
    <div class="form-group">
        <label class="col-form-label" for="password">Password</label><span> </span>
        <input class="form-control" name="password" id="password" type="password" placeholder="Enter Password" required autocomplete="off">
    </div>
    <div class="form-group">
        <div class="rememberchk">
            <input class="form-check-input" id="gridCheck1" type="checkbox">
            <label class="form-check-label ps-4" for="gridCheck1">Remember Me.</label>
            <h6 class="pull-right">
               <a href="/forgot-password">Forgot Password?</a>
            </h6>
        </div>
    </div>
    <div class="form-group mb-0">
        <div class="buttons">
            <button type="submit" class="btn button-effect btn-primary" id="loginButton">Login</button>
        </div>
    </div>
    <% if(systemSetting.allow_user_signup === 'true'){ %>
        <div class="form-group text-center">
            <p>Don't have an account?</p>
            <a href="/register">Sign up</a>
        </div>
    <% } %> %>
</form>
