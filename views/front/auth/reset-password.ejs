<h3>Set a New Password</h3>
<h4>You're almost thereâ€”just enter your new password.</h4>
<% if (error) { %>
    <div class="alert alert-danger" role="alert">
        <i class="fa fa-solid fa-warning"></i>
        <%= error %>
    </div>
<% } %>
<form class="form2" method="POST" action="/reset-password" id="resetPasswordForm">
    <div class="form-group">
        <input name="email" type="hidden" value="<%= email %>">
        <label class="col-form-label" for="new_password">New Password</label>
        <input class="form-control" id="new_password" type="password" name="password" required placeholder="*********" minlength="6">
        <div class="invalid-feedback">Password must be at least 6 characters.</div>
    </div>
    <div class="form-group">
        <label class="col-form-label" for="confirm_password">Confirm Password</label>
        <input class="form-control" id="confirm_password" type="password" name="confirm" required placeholder="*********" minlength="6">
        <div class="invalid-feedback">Please confirm your password.</div>
    </div>
    <div class="form-group mb-0">
        <button type="submit" class="btn button-effect btn-primary" id="resetButton">Submit
            <span class="btn-spinner spinner-border spinner-border-sm d-none" aria-hidden="true"></span>
        </button>
    </div>
</form>
