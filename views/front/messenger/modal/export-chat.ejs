<!-- Export Confirmation Modal -->
<div class="modal fade export-modal" id="exportChatModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">Export Chat Conversation</h3>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="text-muted">
          <p class="mb-0"> Download this conversation as a text file showing each participant, their message, and the time sent.</p>
        </div>
      </div>
      <div class="modal-footer export-modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="confirmExportBtn"><i class="fa fa-download me-2"></i>Export</button>
      </div>
    </div>
  </div>
</div>