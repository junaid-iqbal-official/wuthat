<div class="modal fade add-popup mute-modal" id="muteNotificationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Mute Notifications</h2>
                <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="muteForm">
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="muteDuration" id="mute1h" value="1h">
                        <label class="form-check-label" for="mute1h">Mute for 1 hour</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="muteDuration" id="mute8h" value="8h">
                        <label class="form-check-label" for="mute8h">Mute for 8 hours</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="muteDuration" id="mute1w" value="1w">
                        <label class="form-check-label" for="mute1w">Mute for 1 week</label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="radio" name="muteDuration" id="muteForever" value="forever">
                        <label class="form-check-label" for="muteForever">Always mute</label>
                    </div>
                </form>
            </div>
            <div class="modal-footer ms-auto">
                <button class="btn btn-secondary btn-sm" type="button" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary btn-sm submit-mute" data-bs-dismiss="modal" type="button">Submit</button>
            </div>
        </div>
    </div>
</div>