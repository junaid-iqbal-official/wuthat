<!-- Delete Confirmation Modal -->
<div class="modal fade deleteModal" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Delete Message</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete the message?</p>
      </div>
      <div class="modal-footer justify-content-center">
        <button type="button" class="btn btn-secondary" data-action="delete-for-me" id="deleteForMeBtn">Delete for me</button>
        <button type="button" class="btn btn-primary" data-action="delete-for-everyone" id="deleteForEveryoneBtn">Delete for everyone</button>
      </div>
    </div>
  </div>
</div>