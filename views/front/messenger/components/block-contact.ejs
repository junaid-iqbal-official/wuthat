<div class="block-contact-tab dynemic-sidebar custom-scroll" id="block-contact">
    <div class="theme-title">
        <div class="d-flex">
            <div>
                <h2>Blocked List</h2>
                <h4>People You Blocked</h4>
            </div>
            <div class="flex-grow-1">
                <!-- Search Icon -->
                <a class="icon-btn btn-outline-light btn-sm m-r-15 search" href="javascript:void(0)">
                    <i data-feather="search"></i>
                </a>

                <!-- Search Form -->
                <form class="form-inline search-form">
                    <div class="form-group">
                        <input id="blockContactSearch" class="form-control-plaintext" type="search"
                            placeholder="Search by name or email..." />
                        <div class="icon-close close-search">
                            <i data-feather="x"></i>
                        </div>
                    </div>
                </form>

                <!-- Close Panel -->
                <a class="icon-btn btn-outline-light btn-sm close-panel" href="javascript:void(0)">
                    <i data-feather="x"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Loading indicator -->
    <div id="block-loading" class="text-center p-4">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <p class="mt-2">Loading Blocked Contacts...</p>
    </div>

    <div class="aligns custom-scroll" id="main-block-list" style="display: none;">
        <!-- Blocked Contacts List -->
        <ul class="chat-main custom-scroll mt-3" id="block-list">
            <!-- Blocked contacts will be loaded here dynamically -->
        </ul>

        <!-- Load More Button -->
        <div id="block-load-more-container" class="text-center p-3" style="display: none;">
            <button id="block-load-more-btn" class="btn btn-outline-primary btn-sm">
                <span class="block-load-more-text">Load More</span>
                <span class="block-load-more-spinner spinner-border spinner-border-sm d-none ml-2" role="status"></span>
            </button>
        </div>
    </div>

    <!-- Empty State -->
    <div id="block-empty-state" class="empty-state" style="display: none;">
        <div class="no-result">
            <div class="text-center">
                <img src="<%= assetPath %>/front/images/empty-state.png" alt="" />
                <h5>No Blocked Contacts yet</h5>
                <p>When you block someone, they won't be able to call you or send you messages.</p>
            </div>
        </div>
    </div>

    <!-- Search Empty State -->
    <div id="block-search-empty-state" class="empty-state" style="display: none;">
        <div class="no-result">
            <div class="text-center">
                <img src="<%= assetPath %>/front/images/empty-state.png" alt="" />
                <h5>No results found</h5>
                <p>Try different search terms</p>
            </div>
        </div>
    </div>

    <!-- Error State -->
    <div id="block-error-state" class="text-center p-4" style="display: none;">
        <div class="alert alert-danger">
            <h6>Failed to load blocked contacts</h6>
            <button id="block-retry-btn" class="btn btn-sm btn-outline-danger mt-2">Retry</button>
        </div>
    </div>
</div>
