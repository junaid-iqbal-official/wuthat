<div class="fevorite-tab custom-scrollbar dynemic-sidebar" id="favourite">
    <div class="theme-title">
        <div class="d-flex">
            <div>
                <h2>Favourites</h2>
                <h4>Your Saved Favourites</h4>
            </div>
            <div class="flex-grow-1">
                <!-- Search Icon -->
                <a class="icon-btn btn-outline-light btn-sm m-r-15 search" href="javascript:void(0)">
                    <i data-feather="search"></i>
                </a>

                <!-- Search Form -->
                <form class="form-inline search-form">
                    <div class="form-group">
                        <input id="favoriteSearch" class="form-control-plaintext" type="search"
                            placeholder="Search by name and bio..." />
                        <div class="icon-close close-search">
                            <i data-feather="x"></i>
                        </div>
                    </div>
                </form>

                <!-- Close Panel -->
                <a class="icon-btn btn-outline-light btn-sm close-panel" href="javascript:void(0)">
                    <i data-feather="x"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Loading indicator -->
    <div id="fav-loading" class="text-center p-4">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <p class="mt-2">Loading favorites...</p>
    </div>
    <div class="aligns custom-scroll" id="main-fav-list" style="display: none;">
        <!-- Chat List -->
        <ul class="chat-main custom-scroll mt-3" id="fav-list">
            <!-- Favorites will be loaded here dynamically -->
        </ul>

        <!-- Load More Button -->
        <div id="fav-load-more-container" class="text-center p-3" style="display: none;">
            <button id="fav-load-more-btn" class="btn btn-outline-primary btn-sm">
                <span class="fav-load-more-text">Load More</span>
                <span class="fav-load-more-spinner spinner-border spinner-border-sm d-none ml-2" role="status"></span>
            </button>
        </div>
    </div>

    <!-- Empty State -->
    <div id="fav-empty-state" class="empty-state" style="display: none;">
        <div class="no-result">
            <div class="text-center">
                <img src="<%= assetPath %>/front/images/empty-state.png" alt="" />
                <h5>No favorites yet</h5>
                <p>Add some favorites to see them here</p>
            </div>
        </div>
    </div>

    <!-- Search Empty State -->
    <div id="fav-search-empty-state" class="empty-state" style="display: none;">
        <div class="no-result">
            <div class="text-center">
                <img src="<%= assetPath %>/front/images/empty-state.png" alt="" />
                <h5>No results found</h5>
                <p>Try different search terms</p>
            </div>
        </div>
    </div>

    <!-- Error State -->
    <div id="fav-error-state" class="text-center p-4" style="display: none;">
        <div class="alert alert-danger">
            <h6>Failed to load favorites</h6>
            <button id="fav-retry-btn" class="btn btn-sm btn-outline-danger mt-2">Retry</button>
        </div>
    </div>
</div>