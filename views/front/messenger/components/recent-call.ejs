<!-- Call List Container -->
<div id="call-list-container">
  <!-- Loading indicator -->
  <div id="call-loading" class="text-center p-4">
    <div class="spinner-border text-primary" role="status">
      <span class="sr-only">Loading...</span>
    </div>
    <p class="mt-2">Loading calls...</p>
  </div>

  <!-- Call List -->
  <div class="call-main custom-scroll" id="call-list">
    <!-- Calls will be loaded here dynamically grouped by date -->
  </div>

  <!-- Load More Button -->
  <div id="call-load-more-container" class="text-center p-3">
    <button id="call-load-more-btn" class="btn btn-outline-primary btn-sm">
      <span class="call-load-more-text">Load More</span>
      <span class="call-load-more-spinner spinner-border spinner-border-sm d-none ml-2" role="status"></span>
    </button>
  </div>

  <!-- Empty State -->
  <div id="call-empty-state" class="empty-state" style="display: none;">
    <div class="no-result">
      <div class="text-center">
        <img src="<%= assetPath %>/front/images/empty-state.png" alt="" />
        <h5>No call history yet</h5>
        <p>You haven't made or received any calls yet</p>
      </div>
    </div>
  </div>

  <!-- Error State -->
  <div id="call-error-state" class="text-center p-4">
    <div class="alert alert-danger">
      <h6>Failed to load call history</h6>
      <button id="call-retry-btn" class="btn btn-sm btn-outline-danger mt-2">Retry</button>
    </div>
  </div>
</div>
